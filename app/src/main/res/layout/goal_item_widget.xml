<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/layout_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp"
    android:orientation="horizontal"
    android:paddingHorizontal="10dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="3dp"
    android:layout_height="@dimen/goal_item_height"
    android:layout_width="match_parent">

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/counter_background"
        android:importantForAccessibility="no" />

    <ImageView
        android:id="@+id/image_bg_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/counter_background"
        android:importantForAccessibility="no" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitCenter"
            tools:tint="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_goal"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/decrement"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:textColor="@color/white"
            tools:text="Counter Name"/>
    </LinearLayout>

    <TextView
        android:id="@+id/count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/white"
        tools:text="0"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal|end">

        <ImageView
            android:id="@+id/btn_decrement"
            android:layout_width="@dimen/goal_item_height"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            app:tint="@color/white"
            android:src="@drawable/icon_minus"
            android:paddingHorizontal="15dp"
            android:background="@drawable/options_background"
            android:contentDescription="@string/decrement" />

        <ImageView
            android:id="@+id/btn_increment"
            android:layout_width="@dimen/goal_item_height"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:paddingHorizontal="15dp"
            android:src="@drawable/icon_add"
            app:tint="@color/white"
            android:background="@drawable/options_background"
            android:contentDescription="@string/increment"/>
    </LinearLayout>

</FrameLayout>